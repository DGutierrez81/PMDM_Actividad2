<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pantalla"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="textEnd"
        tools:text="1234"
        android:textSize="43dp"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/CA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CA"
        android:textSize="30dp"
        android:backgroundTint="@color/amarillo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@id/nueve"
        app:layout_constraintTop_toBottomOf="@id/pantalla"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:id="@+id/siete"
        android:text="7"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        android:backgroundTint="@color/gOscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/ocho"
        android:text="8"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        android:backgroundTint="@color/gOscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CA"
        app:layout_constraintStart_toEndOf="@id/siete"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/nueve"
        android:text="9"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        android:backgroundTint="@color/gOscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CA"
        app:layout_constraintStart_toEndOf="@id/ocho"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/division"
        android:text="/"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.8"
        android:backgroundTint="@color/amarillo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CA"
        app:layout_constraintStart_toEndOf="@id/nueve"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/cuatro"
        android:text="4"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        android:backgroundTint="@color/gOscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/siete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/cinco"
        android:text="5"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        android:backgroundTint="@color/gOscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ocho"
        app:layout_constraintStart_toEndOf="@id/siete"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/seis"
        android:text="6"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        android:backgroundTint="@color/gOscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nueve"
        app:layout_constraintStart_toEndOf="@id/ocho"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/multiplicar"
        android:text="X"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.8"
        android:backgroundTint="@color/amarillo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/division"
        app:layout_constraintStart_toEndOf="@id/nueve"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/uno"
        android:text="1"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        android:backgroundTint="@color/gOscuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cuatro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/dos"
        android:text="2"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/gOscuro"
        app:layout_constraintTop_toBottomOf="@id/cinco"
        app:layout_constraintStart_toEndOf="@id/siete"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/tres"
        android:text="3"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/gOscuro"
        app:layout_constraintTop_toBottomOf="@id/seis"
        app:layout_constraintStart_toEndOf="@id/ocho"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/suma"
        android:text="+"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.8"
        android:backgroundTint="@color/amarillo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/multiplicar"
        app:layout_constraintStart_toEndOf="@id/nueve"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/igual"
        android:text="="
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/gris"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/uno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/cero"
        android:text="0"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/gOscuro"
        app:layout_constraintTop_toBottomOf="@id/dos"
        app:layout_constraintStart_toEndOf="@id/igual"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/punto"
        android:text="."
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        android:backgroundTint="@color/gris"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tres"
        app:layout_constraintStart_toEndOf="@id/cero"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/resta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.8"
        android:backgroundTint="@color/amarillo"
        app:layout_constraintStart_toEndOf="@id/nueve"
        app:layout_constraintTop_toBottomOf="@id/suma"/>


</androidx.constraintlayout.widget.ConstraintLayout>